@model Invernadero.Models.Usuario;
@{
	ViewData["Title"] = "Ingreso de usuario";
}

<h2>Inicie sesióm</h2>
<br/>
<form asp-action="Get" method="get">
	<div asp-validation-summary="ModelOnly"></div>
	<div class="row mb-4 m-1 p-2 justify-content-center">
		<div class="col-md-5 bg-dark p-5 m-3 rounded-4">
			<label asp-for="Nombre" class="form-label text-light"></label>
			<input asp-for="Nombre" class="form-control" />
			<span asp-validation-for="Nombre" class="form-label"></span>
			</br>
			<label asp-for="Contrasenia" class="form-label text-light"></label>
			<input asp-for="Contrasenia" class="form-control" />
			<span asp-validation-for="Contrasenia" class="form-label"></span>
			</br>
			<input type="submit" value="Ingresar" class="form-control text-bg-success" />
		</div>
	</div>
</form>

